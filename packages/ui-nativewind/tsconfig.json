{
	"extends": "@lellimecnar/typescript-config/react.json",
	"compilerOptions": {
		"paths": {
			"*": ["./*"],
			"@/*": ["./src/*"]
		},
		"module": "NodeNext",
		"moduleResolution": "NodeNext"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "*.ts", "*.js", ".*.js", "*.json"],
	"exclude": ["dist", "build", "node_modules", "postcss.config.js"]
}
