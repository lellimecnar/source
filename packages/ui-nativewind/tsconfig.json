{
	"extends": "@lellimecnar/typescript-config/react.json",
	"compilerOptions": {
		"paths": {
			"*": ["./*"],
			"@/*": ["./src/*"]
		},
		"module": "NodeNext",
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"*.ts",
		"*.js",
		".*.js",
		".*.cjs",
		"*.json"
	],
	"exclude": ["dist", "build", "node_modules"]
}
