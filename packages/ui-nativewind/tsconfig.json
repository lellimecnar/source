{
  "extends": "@lellimecnar/typescript-config/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.ts",
    "*.js",
    ".*.js",
    "*.json"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}