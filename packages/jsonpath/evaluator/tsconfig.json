{
	"extends": "@lellimecnar/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"paths": {
			"@jsonpath/core": [
				"../core/src/index.ts"
			],
			"@jsonpath/lexer": [
				"../lexer/src/index.ts"
			],
			"@jsonpath/parser": [
				"../parser/src/index.ts"
			],
			"@jsonpath/functions": [
				"../functions/src/index.ts"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"**/__tests__"
	]
}