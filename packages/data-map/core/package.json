{
	"name": "@data-map/core",
	"version": "0.1.0",
	"description": "DataMap core reactive store",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"bench": "vitest bench",
		"build": "vite build",
