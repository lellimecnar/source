{
	"name": "polymix",
	"version": "0.0.1",
	"description": "Next-generation TypeScript mixins with native instanceof support and composition strategies.",
	"keywords": [
		"typescript",
		"mixins",
		"multiple-inheritance",
		"decorators",
		"composition"
	],
	"homepage": "https://github.com/lellimecnar/source/tree/master/packages/polymix#readme",
	"bugs": {
		"url": "https://github.com/lellimecnar/source/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lellimecnar/source.git",
		"directory": "packages/polymix"
	},
	"license": "MIT",
	"author": "James Miller <lellimecnar@gmail.com>",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run clean && vite build",
		"clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
		"dev": "vite build --watch",
		"lint": "eslint .",
		"prepack": "pnpm run build",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"type-check": "tsgo --noEmit"
	},
	"devDependencies": {
		"@lellimecnar/eslint-config": "workspace:*",
		"@lellimecnar/typescript-config": "workspace:*",
		"@lellimecnar/vite-config": "workspace:^",
		"@lellimecnar/vitest-config": "workspace:*",
		"@types/jest": "^30.0.0",
		"@vitest/coverage-v8": "^4.0.16",
		"eslint": "^8.57.1",
		"reflect-metadata": "^0.2.2",
		"typescript": "~5.5",
		"vite": "^7.3.0",
		"vite-plugin-dts": "^4.5.4",
		"vite-tsconfig-paths": "^6.0.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"reflect-metadata": "^0.1.13 || ^0.2.0"
	},
	"peerDependenciesMeta": {
		"reflect-metadata": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
