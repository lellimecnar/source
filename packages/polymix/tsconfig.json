{
    "extends": "@lellimecnar/typescript-config",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}