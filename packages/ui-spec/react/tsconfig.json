{
	"extends": "@lellimecnar/typescript-config/react.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": "./src",
		"outDir": "./dist",
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"dist",
		"node_modules",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"src/**/__tests__/**"
	]
}
