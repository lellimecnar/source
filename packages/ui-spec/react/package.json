{
	"name": "@ui-spec/react",
	"version": "0.1.0",
	"description": "React binding for UI-Spec.",
	"license": "MIT",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"lint": "eslint . --max-warnings 0",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"type-check": "tsgo -p tsconfig.json --noEmit"
	},
	"dependencies": {
		"@ui-spec/core": "workspace:*"
	},
	"devDependencies": {
		"@lellimecnar/eslint-config": "workspace:*",
		"@lellimecnar/typescript-config": "workspace:*",
		"@lellimecnar/vitest-config": "workspace:*",
		"@types/jest": "^29.5.12",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitest/coverage-v8": "^4.0.16",
		"eslint": "^8.57.1",
		"happy-dom": "^20.0.11",
		"jest": "^29.7.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"reflect-metadata": "^0.2.2",
		"ts-jest": "^29.2.5",
		"typescript": "~5.5.0",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18"
	}
}
