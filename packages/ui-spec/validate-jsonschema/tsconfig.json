{
	"extends": "@lellimecnar/typescript-config/base.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules", "src/**/*.spec.ts", "src/**/__tests__/**"]
}
