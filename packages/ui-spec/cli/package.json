{
	"name": "@ui-spec/cli",
	"version": "0.1.0",
	"description": "UI-Spec CLI (validate and generate-types).",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"uispec": "./dist/bin/uispec.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build",
		"postbuild": "node -e \"require('node:fs').cpSync('bin', 'dist/bin', { recursive: true })\"",
		"lint": "eslint . --max-warnings 0",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"type-check": "tsgo -p tsconfig.json --noEmit"
	},
	"dependencies": {
		"@ui-spec/core": "workspace:*"
	},
	"devDependencies": {
		"@lellimecnar/eslint-config": "workspace:*",
		"@lellimecnar/typescript-config": "workspace:*",
		"@lellimecnar/vite-config": "workspace:^",
		"@lellimecnar/vitest-config": "workspace:*",
		"@types/jest": "^29.5.12",
		"@types/node": "^24",
		"@vitest/coverage-v8": "^4.0.16",
		"eslint": "^8.57.1",
		"jest": "^29.7.0",
		"reflect-metadata": "^0.2.2",
		"ts-jest": "^29.2.5",
		"typescript": "~5.5.0",
		"vite": "^7.3.0",
		"vite-plugin-dts": "^4.5.4",
		"vite-tsconfig-paths": "^6.0.3",
		"vitest": "^4.0.16"
	}
}
