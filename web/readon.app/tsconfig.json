{
	"extends": "@lellimecnar/typescript-config/next.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"noEmit": true,
		"isolatedModules": true,
		"module": "preserve",
		"moduleResolution": "bundler",
		"paths": {
			"*": ["./*"],
			"@/*": ["./src/*"],
			"@lellimecnar/utils": ["../../packages/utils/src"],
			"@lellimecnar/utils/*": ["../../packages/utils/src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
